<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/notice.css" type="text/css">
</head>
<body>
    <div class="container">

        <form action="/notices" method="POST" class="mid-container">
            
            <h1 class="heading">NOTICE GENERATOR</h1>
<!-- Notice No. & Date -->
            <div class="row">
                <div class="col">
                    <label for="noticenom">Notice No.:</label>
                    <input type="text" id="noticenom" name="notice[noticenom]" class="form-control">
                </div>
                <div class="col">
                    <label for="date">Date</label>
                    <input type="text" id="date" name="notice[date]" class="form-control" >
                </div>
            </div>
<div class="row">
                <div class="col">
                    <label for="Company">Company:</label>
                    <input type="text" id="Company" name="notice[Company]" class="form-control">
                </div>
                <div class="col">
                    <label for="position">Position</label>
                    <input type="text" id="position" name="notice[position]" class="form-control"> 
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="YOP">Passout Year:</label>
                    <input type="text" id="YOP" name="notice[YOP]" class="form-control">
                </div>
                            
                <div class="col">
                    <label for="CTC">CTC: </label>
                    <input type="text" id="CTC" name="notice[CTC]" class="form-control">
                </div>
            </div>

            <%- include('streams.ejs') %>

            <div class="row">
                <div class="col">
                    <label for="website">Registration Link</label>
                    <input type="text" id="website" name="notice[website]" class="form-control">
                </div>
            </div>

            <div>
                <label for="dead">Deadline: </label>
                <input type="text" id="dead" name="notice[dead]" class="form-control">
            </div>

            <label for="Notice">Enter the notice</label>

            <div class="row">
                <div class="col">
                    <textarea id="Notice" name="notice[Notice]" cols="30" rows="10" class="form-control"></textarea>
                </div>
            </div>
                <button class="btn btn-primary" onclick="processInput()">Submit</button>

            
            
        </form>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
</body>
</html>